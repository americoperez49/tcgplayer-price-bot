generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id            String          @id @default(uuid())
  url           String          @unique
  monitoredItems MonitoredItem[]
  priceHistory  PriceHistory[] // Add this line

  @@map("urls")
}

model MonitoredItem {
  id            String    @id @default(uuid()) // Changed to GUID (UUID)
  name          String
  condition     Condition @default(NearMint) // New field
  threshold     Float
  discordUserId String    // Made required
  urlId         String
  url           Url       @relation(fields: [urlId], references: [id])

  @@map("monitored_items") // Map to a snake_case table name
}

model PriceHistory {
  id        String   @id @default(uuid())
  urlId     String
  url       Url      @relation(fields: [urlId], references: [id])
  price     Float
  timestamp DateTime @default(now())

  @@map("price_history")
}

enum Condition {
  Unopened
  NearMint
  LightlyPlayed    // New value
  ModeratelyPlayed // New value
  HeavilyPlayed    // New value

  @@map("conditions")
}
