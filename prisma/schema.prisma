generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MonitoredItem {
  id        Int      @id @default(autoincrement())
  name      String
  url       String   @unique // URL should be unique for monitored items
  threshold Float

  prices    PriceHistory[] // Relation to PriceHistory

  @@map("monitored_items") // Map to a snake_case table name
}

model PriceHistory {
  id              Int      @id @default(autoincrement())
  monitoredItemId Int
  price           Float
  timestamp       DateTime @default(now())

  monitoredItem   MonitoredItem @relation(fields: [monitoredItemId], references: [id])

  @@map("price_history") // Map to a snake_case table name
}
