generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MonitoredItem {
  id            String   @id @default(uuid()) // Changed to GUID (UUID)
  name          String
  url           String   // Removed @unique
  threshold     Float
  discordUserId String   // Made required

  // Removed prices relation as PriceHistory table is being removed

  @@map("monitored_items") // Map to a snake_case table name
}

